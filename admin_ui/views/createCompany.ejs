<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Crear Empresa</title>

    
</head>
<body>
    

    <!-- formulario para crear empresa -->
    <section class="vh-100 gradient-custom">
        <div class="container-fluid py-5 h-100">
            <div class="row d-flex justify-content-md-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white bg-opacity-10" style="border-radius: 1rem;">
                        <form class="mb-md-5 mt-md-4 needs-validation" novalidate>
                            <div class="mb-3 p-3 p-md-5">
                                <!-- campos -->
                                <h1 class="text-center mb-4">Formulario para crear empresa</h2>
                                <!-- 1 nombre de compañia -->
                                <label for="companyName" class="form-label">Nombre de Empresa</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-building"></i>
                                    </span>
                                    <input type="text" class="form-control" id="companyName" placeholder="Ejemplo: PuzzleAI" required>
                                    <div class="invalid-feedback">Porfavor llenar el campo.</div>
                                </div>

                                <!-- 2 codigo de compañia -->
                                <label for="companyCode" class="form-label">Codigo de Empresa</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-123"></i>
                                    </span>
                                    <input type="number" class="form-control" id="companyCode" placeholder="Ejemplo: 1234" required>
                                    <div class="invalid-feedback">Porfavor llenar el campo.</div>
                                </div>

                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                    <label class="form-check-label" for="flexSwitchCheckChecked">Estado de Empresa <span style="font-weight:bold;">Inactiva/Activa</span></label>
                                </div>

                                <!-- 3 cantidad de colaboradores -->
                                <label for="maxColab" class="form-label">Cantidad maxima de <span style="font-weight:bold;">Colaboradores</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person-plus-fill"></i>
                                    </span>
                                    <input type="number" class="form-control" id="maxColab" placeholder="Min: 1 - Max: Ilimitado" required>
                                    <div class="invalid-feedback">Porfavor llenar el campo.</div>
                                </div>

                                <!-- 4 cantidad de administradores -->
                                <label for="maxAdmin" class="form-label">Cantidad maxima de <span style="font-weight:bold;">Administradores</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person-plus-fill"></i>
                                    </span>
                                    <input type="number" class="form-control" id="maxAdmin" placeholder="Min: 1 - Max: Ilimitado" required>
                                    <div class="invalid-feedback">Porfavor llenar el campo.</div>
                                </div>





                                <div class="justify-content-center text-center">
                                    <button class="btn btn-outline-light btn-lg px-2 mt-3" type="submit">Registrar</button>
                                </div>
                                
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>






    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="js/validation.js"></script>
</body>
</html>