<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <title>Crear administrador</title>
</head>
<body>
    <!-- Sidebar -->
    <%- include('./partials/sidebar.ejs') %> 
    <!-- Content -->
    <section class="p-4 my-container">
        <div class="sticky-top" id="menu-space">
            <button class="btn my-4 bg-primary" id="menu-btn"><i class="bi bi-list"></i></button>
        </div>
        <div class="row d-flex justify-content-md-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <form class="mb-md-5 mt-md-4 needs-validation" action="/create-administrator" method="POST" novalidate>
                    <div class="mb-3 p-3 p-md-5">
                        <!-- campos -->
                        <h1 class="display-4 text-center mb-4"> <strong> Formulario para crear administradores</strong></h2>
                        <!-- 1 nombre-->
                        <label for="userName" class="form-label">Nombre</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input type="text" class="form-control" id="userName" placeholder="Ejemplo: Peter" name="UserName" required>
                            <div class="invalid-feedback">Porfavor llenar el campo.</div>
                            
                        </div>
                         <!-- 2 apellido -->
                        <label for="userLastName" class="form-label">Apellido</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person-fill"></i>
                            </span>
                            <input type="text" class="form-control" id="userLastName" placeholder="Ejemplo: Parker" name="UserLastName" required>
                            <div class="invalid-feedback">Porfavor llenar el campo.</div>
                        </div>
                         <!--3 usuario -->
                         <label for="user" class="form-label">Usuario</label>
                         <div class="input-group">
                             <span class="input-group-text">
                                <i class="bi bi-person"></i>
                             </span>
                             <input type="text" class="form-control" id="user" placeholder="Ejemplo: pparker287" name="UserNick" required>
                             <div class="invalid-feedback">Porfavor llenar el campo.</div>
                         </div>
                         <!--4 contraseña -->
                         <label for="password" class="form-label">Contraseña</label>
                         <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-key-fill"></i>
                            </span>
                            <input type="password" id="password" class="form-control" minlength="8" maxlength="16" placeholder="contraseña" name="UserPass" required/>
                            <div class="invalid-feedback">Porfavor llenar el campo.</div>
                         </div>

                         <!--5 email -->
                         <!-- <label for="useremail" class="form-label">Correo</label>
                         <div class="input-group">
                             <span class="input-group-text">
                                  <i class="bi bi-envelope-fill"></i>
                             </span>
                             <input type="email" class="form-control" id="useremail" placeholder="Ejemplo: pparker@correo.com" name="UserEmail" required>
                             <div class="invalid-feedback">Porfavor llenar el campo.</div>
                         </div> -->
                         
                         <!--6 codigo de empleado -->
                         <label for="userCode" class="form-label">Codigo de Empleado</label>
                         <div class="input-group">
                             <span class="input-group-text">
                                <i class="bi bi-123"></i>                             </span>
                             <input type="number" class="form-control" id="userCode" placeholder="Valor Numerico" name="employee_code" required>
                             <div class="invalid-feedback">Porfavor llenar el campo.</div>
                         </div>
                        <!-- submit -->
                        <div class="justify-content-center text-center">
                            <button class="btn btn-outline-light btn-lg px-2 mt-3 bg-primary" type="submit" value="submit">Guardar</button>
                        </div>
                </form>
                <!-- Feedback al usuario -->
                <% if (locals.feedback) { %>
                    <% if (locals.feedback.code == 2003) { %>
                        <p class="text-center mt-2 text-danger">¡El codigo de empleado ya existe!</p>
                    <% } else if(locals.feedback.code == 2004) {%>
                        <p class="text-center mt-2 text-danger">¡El nombre de usuario no esta disponible!</p>
                    <%} else if (locals.feedback.code == 7001) { %>
                        <p class="text-center mt-2 text-success"> ¡Administrador creado exitosamente!</p>
                    <% } %> 
                <% } %>
                
            </div>
        </div>
        

    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="./js/sidebar.js"></script>
    <script src="./js/validation.js"></script>
</body>
</html>
 